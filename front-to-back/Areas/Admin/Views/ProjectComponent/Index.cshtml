@using front_to_back.ViewModels.Home;
@model HomeIndexViewModel
<div class="col-lg-12  grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">projectComponent Table</h4>
            <a asp-action="create" asp-controller="projectComponent" asp-area="admin" class="btn btn-success">Add projectComponent</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Photo</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var projectComponent in Model.ProjectComponents)
                        {
                            <tr>
                                <td>@projectComponent.Id</td>
                                <td>@projectComponent.Title</td>
                                <td>
                                    <img src="~/assets/img/@projectComponent.FilePath">
                                </td>
                                <td>@projectComponent.Text</td>
                                <td>@projectComponent.Type</td>
                                <td>
                                    <a asp-route-id="@projectComponent.Id" asp-action="update" asp-controller="projectComponent" asp-area="admin" class="btn btn-primary">Update</a>
                                    <a asp-route-id="@projectComponent.Id" asp-action="details" asp-controller="projectComponent" asp-area="admin" class="btn btn-warning mx-3 ">Details</a>
                                    <a asp-route-id="@projectComponent.Id" asp-action="delete" asp-controller="projectComponent" asp-area="admin" class="btn btn-danger">Delete</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>