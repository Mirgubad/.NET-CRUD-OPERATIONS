@using front_to_back.Areas.Admin.ViewModels.Category;
@model CategoryComponentUpdateViewModel;

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Work Components </h4>
                        <div class="img-thmubnail d-flex justify-content-center ">
                            <img class="img-thumbnail" style="width:200px;height:200px" src="~/assets/img/@Model.FilePath" />
                        </div>

                        <form method="post" asp-action="update" asp-controller="categorycomponent" asp-area="admin" asp-route-id="@Model.Id" class="forms-sample" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" asp-for="FilePath" />
                                <div>
                                    <label asp-for="Title"></label>
                                    <input asp-for="Title" class="form-control">
                                    <span class="text-danger" asp-validation-for="Title"></span>
                                </div>
                                <div>
                                    <label asp-for="Description"></label>
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                    <span class="text-danger" asp-validation-for="Description"></span>
                                </div>
                                <div>
                                    <label asp-for="Photo">Photo</label>
                                    <input asp-for="Photo" class="form-control">
                                    <span class="text-danger" asp-validation-for="Photo"></span>
                                </div>
                                <div>
                                    <label asp-for="CategoryId"></label>
                                    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
                                    <span class="text-danger" asp-validation-for="CategoryId"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light" asp-action="index" asp-controller="categorycomponent" asp-area="admin">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")
    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}
