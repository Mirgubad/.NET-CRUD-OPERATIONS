@using front_to_back.Areas.Admin.ViewModels.FeaturedWorkComponent;
@model FeaturedWorkComponentIndexViewModel
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category Table</h4>
            @{
                if (Model.FeaturedWorkComponent != null)
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.FeaturedWorkComponent.Id</td>
                                    <td>@Model.FeaturedWorkComponent.Title</td>

                                    <td class="d-flex ">
                                        <a asp-action="update" asp-controller="featuredworkcomponent" asp-area="admin" asp-route-id="@Model.FeaturedWorkComponent.Id" class="btn btn-primary">Update</a>
                                        <a asp-action="details" asp-controller="featuredworkcomponent" asp-area="admin" asp-route-id="@Model.FeaturedWorkComponent.Id" class="btn btn-warning mx-3">Details</a>
                                        <form method="post">
                                            <button type="submit" asp-action="delete" asp-controller="featuredworkcomponent" asp-area="admin" asp-route-id="@Model.FeaturedWorkComponent.Id" class="btn btn-outline-google">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <a asp-action="create" asp-controller="featuredworkcomponent" asp-area="admin" class="btn btn-success">Add Featured Work Component</a>
                }

            }
        </div>
    </div>
</div>