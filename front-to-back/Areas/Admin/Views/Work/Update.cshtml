@using front_to_back.Areas.Admin.ViewModels;
@model WorkUpdateViewModel;

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Work Components </h4>
                        <div class="img-thmubnail d-flex justify-content-center ">
                            <img class="img-thumbnail" style="width:200px;height:200px" src="~/assets/img/@Model.FilePath" />
                        </div>

                        <form method="post" asp-action="updatework" asp-controller="work" asp-area="admin" asp-route-id="@Model.Id" class="forms-sample" enctype="multipart/form-data">
                            <div class="form-group">

                                <div>
                                    <label asp-for="Title">Title</label>
                                    <input asp-for="Title" class="form-control">
                                    <span class="text-danger" asp-validation-for="Title"></span>
                                </div>
                                <div>
                                    <label asp-for="Text">Text</label>
                                    <input asp-for="Text" class="form-control">
                                    <span class="text-danger" asp-validation-for="Text"></span>
                                </div>
                                <div>
                                    <label asp-for="Photo">Photo</label>
                                    <input asp-for="Photo" class="form-control">
                                    <span class="text-danger" asp-validation-for="Photo"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light" asp-action="index" asp-controller="work" asp-area="admin">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



