@using front_to_back.Areas.Admin.ViewModels.TeamMember;
@model TeamMemberCreateViewModel;

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Work Components </h4>
                        <form method="post" class="forms-sample" enctype="multipart/form-data">
                            <div class="form-group">
                                <div>
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div>
                                    <label asp-for="Surname"></label>
                                    <input asp-for="Surname" class="form-control">
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                                <div>
                                    <label asp-for="Position"></label>
                                    <input asp-for="Position" class="form-control">
                                    <span class="text-danger" asp-validation-for="Position"></span>
                                </div>
                                <div>
                                    <label asp-for="Photo"></label>
                                    <input asp-for="Photo" class="form-control">
                                    <span class="text-danger" asp-validation-for="Photo"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light" asp-action="index" asp-controller="teammember" asp-area="admin">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



