@using front_to_back.Models
@model ContractIntroComponent
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"><span class="text-danger">DELETE</span> Components</h4>
            <div class="table-responsive">
                <div class="img-thumbnail d-flex justify-content-center" style="width:300px">
                    <img src="~/assets/img/@Model.FilePath" />
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Title</td>
                            <td>@Model.Description</td>



                        </tr>
                    </tbody>
                </table>
                <form class="pt-3" method="post" asp-route-id="@Model.Id" asp-action="deletecomponent" asp-controller="contact" asp-area="admin">
                    <button onclick="confirm('Are you sure?')" class="btn btn-danger">Delete</button>
                    <button asp-action="index" asp-controller="contact" asp-area="admin" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>