@using front_to_back.Areas.Admin.ViewModels;
@model ContactIntroUpdateViewModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Contact Intro </h4>
                        <form method="post" asp-action="update" asp-controller="contact" asp-area="admin" class="forms-sample" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" asp-for="FilePath" />
                                <div>
                                    <img style="width:200px;height:200px;border-radius:50%" src="~/assets/img/@Model.FilePath" />
                                </div>
                                <div>
                                    <label asp-for="Title">Title</label>
                                    <input asp-for="Title" class="form-control">
                                    <span class="text-danger" asp-validation-for="Title"></span>
                                </div>
                                <div>
                                    <label asp-for="Description">Description</label>
                                    <input asp-for="Description" class="form-control">
                                    <span class="text-danger " asp-validation-for="Description"></span>
                                </div>
                                <div>
                                    <label asp-for="Photo">Photo</label>
                                    <input asp-for="Photo" class="form-control">
                                    <span class="text-danger " asp-validation-for="Photo"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-light" asp-action="index" asp-controller="contact" asp-area="admin">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")
}