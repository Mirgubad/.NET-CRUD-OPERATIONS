@using front_to_back.Areas.Admin.ViewModels;
@model ContactIntroViewModel
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Contact Table</h4>
            <a asp-action="create" asp-controller="contact" asp-area="admin" class="btn btn-success">Add contact</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Photo</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contractIntroComponent in Model.contractIntroComponents)
                        {
                            <tr>
                                <td>@contractIntroComponent.Id</td>
                                <td>@contractIntroComponent.Title</td>
                                <td>@contractIntroComponent.Description</td>
                                <td><img src="~/assets/img/@contractIntroComponent.FilePath" /></td>
                                <td>
                                    <a asp-route-id="@contractIntroComponent.Id" asp-action="update" asp-controller="contact" asp-area="admin" class="btn btn-primary ">Update</a>
                                    <a asp-route-id="@contractIntroComponent.Id" asp-action="details" asp-controller="contact" asp-area="admin" class="btn btn-warning mx-3 ">Details</a>
                                    <a asp-route-id="@contractIntroComponent.Id" asp-action="delete" asp-controller="contact" asp-area="admin" class="btn btn-danger ">Delete</a>                                  
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>